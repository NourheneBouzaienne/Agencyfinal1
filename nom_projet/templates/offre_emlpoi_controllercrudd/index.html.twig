                <td>{{ offre_emploi.datefin ? offre_emploi.datefin|date('Y-m-d') : '' }}</td>
                <td>{{ offre_emploi.salaire }}</td>
                <td>{{ offre_emploi.comptences }}</td>
                <td>{{ offre_emploi.etat }}</td>
                <td>
                    <a href="{{ path('offre_emlpoi_controllercrudd_show', {'id': offre_emploi.id}) }}">show</a>
                    <a href="{{ path('offre_emlpoi_controllercrudd_edit', {'id': offre_emploi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
