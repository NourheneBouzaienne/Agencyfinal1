{% extends 'base.html.twig' %}

{% block title %}OffreEmploi index{% endblock %}

{% block body %}
    <h1>OffreEmploi index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Nombreposte</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Salaire</th>
                <th>Comptences</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre_emploi in offre_emplois %}
            <tr>
                <td>{{ offre_emploi.id }}</td>
                <td>{{ offre_emploi.nom }}</td>
                <td>{{ offre_emploi.description }}</td>
                <td>{{ offre_emploi.nombreposte }}</td>
